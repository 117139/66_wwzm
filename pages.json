{
	"pages": [ //pages数组中第一项表示应用启动页，参考：https://uniapp.dcloud.io/collocation/pages
		{
			"path": "pages/index/index",
			"style": {
				"navigationBarTitleText": "万屋智能",
				"app-plus": {
					"bounce": "false" // 取消APP端iOS回弹,避免与下拉刷新冲突 (可统一配在 'globalStyle')
				},
				"navigationStyle": "custom"
			}
		}, {
			"path": "pages/my/my",
			"style": {
				"navigationBarTitleText": "",
				"enablePullDownRefresh": false,
				"app-plus": {
					"bounce": "false" // 取消APP端iOS回弹,避免与下拉刷新冲突 (可统一配在 'globalStyle')
				},
				"navigationStyle": "custom"
			}

		}, {
			"path": "pages/main/main",
			"style": {
				"navigationBarTitleText": "",
				"enablePullDownRefresh": false,
				"navigationBarTextStyle": "white",
				"app-plus": {
					"bounce": "false" // 取消APP端iOS回弹,避免与下拉刷新冲突 (可统一配在 'globalStyle')
				},
				"navigationStyle": "custom"
			}


		}, {
			"path": "pages/kefu/kefu",
			"style": {
				"navigationBarTitleText": "客服",
				"navigationBarBackgroundColor": "#FFFFFF",
				"enablePullDownRefresh": false
			}

		}
	],
	"subPackages": [{
		"root": "pagesA",
		"pages": [{
			"path": "about/about",
			"style": {
				"navigationBarTitleText": "关于我们",
				"navigationBarBackgroundColor": "#FFFFFF",
				"enablePullDownRefresh": false
			}

		}, {
			"path": "bus_hetong/bus_hetong",
			"style": {
				"navigationBarTitleText": "合同",
				"enablePullDownRefresh": false,
				"navigationBarBackgroundColor": "#FFFFFF"

			}

		}, {
			"path": "bus_order/bus_order",
			"style": {
				"navigationBarTitleText": "工程",
				"enablePullDownRefresh": false,
				"navigationBarBackgroundColor": "#FFFFFF"
				
			}

		}]
	}],

	"preloadRule": {
		"pages/index/index": {
			"network": "all",
			"packages": ["pagesA"]
		},
		"pages/my/my": {
			"network": "all",
			"packages": ["pagesA"]
		}

	},
	"tabBar": {
		"color": "#B8B8B8",
		"selectedColor": "#11A078",
		"backgroundColor": "#ffffff",
		"list": [{
			"pagePath": "pages/index/index",
			"text": "首页",
			"iconPath": "static/images/tabbar/tab1.png",
			"selectedIconPath": "static/images/tabbar/tab12.png"
		}, {
			"pagePath": "pages/kefu/kefu",
			"text": "客服",
			"iconPath": "static/images/tabbar/tab2.png",
			"selectedIconPath": "static/images/tabbar/tab22.png"
		}, {
			"pagePath": "pages/my/my",
			"text": "我的",
			"iconPath": "static/images/tabbar/tab3.png",
			"selectedIconPath": "static/images/tabbar/tab32.png"
		}, {
			"pagePath": "pages/main/main",
			"text": "更多",
			"iconPath": "static/images/tabbar/tab4.png",
			"selectedIconPath": "static/images/tabbar/tab42.png"
		}]
	},
	"globalStyle": {
		"navigationBarTextStyle": "black",
		"navigationBarTitleText": "万屋智能",
		"navigationBarBackgroundColor": "#F8F8F8",
		"backgroundColor": "#F8F8F8"
	}
}
